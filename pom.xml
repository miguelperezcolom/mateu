    <module>mdd-annotationprocessing</module>
    <module>mdd-core</module>
    <module>mdd-jpa</module>
    <module>mdd-vaadin</module>
    <module>mdd-springboot</module>
      <module>mdd-reflection</module>
      <module>mdd-util</module>
  </modules>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
